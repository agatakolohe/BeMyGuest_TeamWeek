@{
    Layout = "_Layout";
}

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<h1 class="bg-info text-white">List of Roles</h1>

<table class="table table-striped table-bordered table-bordered">
    <tr><th>Role Name</th><th>Users</th><th>Update</th><th>Delete</th></tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td></td>
                <td><a class="btn btn-sm btn-primary" asp-action="EditRole" asp-route-id="@role.Id">Update</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
</table>
<p>@Html.ActionLink("Create a Role", "CreateRole")</p>